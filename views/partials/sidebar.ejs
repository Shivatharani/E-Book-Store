  <span></span>
  <span></span>
  <span></span>
</button>

<!-- Sidebar Container -->
<div class="sidebar" id="sidebar">
  <ul class="sidebar-menu">
    <li><a href="/home"><i class="fas fa-home"></i> Home</a></li>
    <li><a href="/home?category=All"><i class="fas fa-th-list"></i> All Books</a></li>
    <li><a href="/home?category=New Arrivals"><i class="fas fa-star"></i> New Arrivals</a></li>
    <li><a href="/home?category=Bestsellers"><i class="fas fa-chart-line"></i> Bestsellers</a></li>
    <li><a href="/genres"><i class="fas fa-tags"></i> Genres</a></li>
    <li><a href="/authors"><i class="fas fa-user-edit"></i> Authors</a></li>
    <li><a href="/orders"><i class="fas fa-shopping-cart"></i> Orders</a></li>
    <li><a href="/profile"><i class="fas fa-user"></i> Profile</a></li>
    <li><a href="#" id="logoutBtn"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
  </ul>
</div>

<style>
  /* Hamburger button */
  .sidebar-toggle {
    position: fixed;
    top: 18px;
    left: 230px;
    width: 34px;
    height: 34px;
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 1201;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 7px;
    transition: left 0.3s;
  }

  .sidebar-toggle span {
    background: #fff;
    display: block;
    height: 4px;
    width: 100%;
    border-radius: 2px;
    margin: 2px 0;
    transition: all 0.3s;
  }

  .sidebar.collapsed + .sidebar-toggle,
  .sidebar.collapsed ~ .sidebar-toggle {
    left: 70px;
  }

  /* Sidebar */
  .sidebar {
    position: fixed;
    top: 0; left: 0;
    height: 100vh;
    width: 220px;
    background-color: #003366;
    color: white;
    padding-top: 55px;
    font-family: Arial, sans-serif;
    transition: width 0.3s;
    overflow-x: hidden;
    z-index: 1200;
  }

  .sidebar.collapsed {
    width: 60px;
  }

  .sidebar-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .sidebar-menu li {
    margin: 15px 0;
  }
  .sidebar-menu a {
    color: white;
    text-decoration: none;
    font-weight: bold;
    display: flex;
    align-items: center;
    padding: 10px 15px;
    border-radius: 5px;
    transition: 0.2s;
    white-space: nowrap;
  }
  .sidebar-menu a i {
    margin-right: 12px;
    font-size: 18px;
  }
  .sidebar-menu a:hover {
    background-color: #00509e;
  }

  /* When sidebar is collapsed, hide text and just show icons */
  .sidebar.collapsed .sidebar-menu a {
    justify-content: center;
    padding: 10px 0;
  }
  .sidebar.collapsed .sidebar-menu a span,
  .sidebar.collapsed .sidebar-menu a:not(:first-child) {
    display: none;
  }
  .sidebar.collapsed .sidebar-menu a i {
    margin: 0;
    font-size: 24px;
  }

  /* Page content margin update: This CSS should also be in your main layout or home/profile EJS */
  .page-content {
    margin-left: 220px;
    transition: margin-left 0.3s;
  }
  .sidebar.collapsed ~ .page-content,
  body .sidebar.collapsed ~ .page-content {
    margin-left: 60px;
  }
  @media (max-width: 700px) {
    .sidebar { width: 60px; }
    .sidebar-toggle { left: 70px; }
    .page-content { margin-left: 60px; }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('sidebarToggle');
    const logoutBtn = document.getElementById('logoutBtn');
    // Find .page-content panel for margin shift
    const pageContent = document.querySelector('.page-content');

    function updateContentMargin() {
      if (sidebar.classList.contains('collapsed')) {
        if (pageContent) pageContent.style.marginLeft = '60px';
        toggleBtn.style.left = '70px';
      } else {
        if (pageContent) pageContent.style.marginLeft = '220px';
        toggleBtn.style.left = '230px';
      }
    }

    toggleBtn.addEventListener('click', function () {
      sidebar.classList.toggle('collapsed');
      updateContentMargin();
    });
    updateContentMargin();

    if (logoutBtn) {
      logoutBtn.addEventListener('click', function (e) {
        e.preventDefault();
        if (confirm('ARE YOU SURE TO LOG OUT?')) {
          window.location.href = '/logout';
        }
      });
    }
  });
</script>
